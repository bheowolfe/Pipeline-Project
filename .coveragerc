[run]
# What to measure
source = src

omit = 
    */tests/*
    */test_*.py
    */__pycache__/*
    */venv/*
    */virtualenv/*
    */.venv/*
    */site-packages/*
    setup.py
    conftest.py
    */main.py

# Branches
branch = True

[report]
# Output options
precision = 2
show_missing = True
skip_covered = False

# Fail if coverage is below threshold
fail_under = 80

# Exclude lines from coverage
exclude_lines =
    pragma: no cover
    def __repr__
    raise AssertionError
    raise NotImplementedError
    if __name__ == .__main__.:
    if TYPE_CHECKING:
    @abstractmethod
    @abc.abstractmethod

[html]
directory = htmlcov

[xml]
output = coverage.xml
